    "server-start": "tsc -p server && node --enable-source-maps --experimental-specifier-resolution=node --loader ts-node/esm server/express.ts"
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
