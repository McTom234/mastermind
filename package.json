    "@types/node": "^18.15.11",
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "date-fns": "^2.29.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "next": "^13.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rotating-file-stream": "^3.1.0",
    "sass": "^1.61.0",
    "socket.io": "^4.6.1",
    "socket.io-client": "^4.6.1",
    "ts-node": "^10.9.1",
    "tslog": "^4.8.2",
    "typescript": "^5.0.4"
