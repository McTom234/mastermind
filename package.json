  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "next/core-web-vitals",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "prettier": {
    "printWidth": 160,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "always"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss",
      "stylelint-config-hudochenkov/order",
      "stylelint-prettier/recommended"
    ],
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "declaration-no-important": true
    }
  },
  "browserslist": [
    "defaults",
    "not dead",
    "not op_mini all"
  ],
  "license": "MIT"
}
